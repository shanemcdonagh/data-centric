<!-- editModule - Enables users to update a module within the database -->
<body>
    <h1>Edit Module</h1>

    <!-- If there are any errors (outside of conditions), they will display here -->
    <% if (errors !=undefined){%>
        <ul>
            <%errors.forEach((error)=> { %>
                <li>
                    <%=error.msg %>
                </li>
            <% })%>
        </ul>
    <% } %>

    <!-- Enables user to input values to update -->
    <form action="/module/edit/<%= module.mid %>" method="POST">
        <label>Module ID</label>
        
        <!-- First field is marked as readonly -->
        <input type="text" name="mid" value=<%=module.mid %> readonly><br>
        <label>Name</label>
        <input type="text" name="name" value="<%= module.name %>"><br>
        <label>Credits</label>
        <input type="text" name="credits" value="<%= module.credits %>"><br>
        <input type="submit" value="Add">
    </form>
    <a href="/">Home</p>

</body>